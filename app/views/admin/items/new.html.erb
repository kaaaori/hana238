<div class="container">
  <h3 class="mt-5 text-center">商品新規登録</h3>

  <div class="row mt-5 mb-3 d-flex justify-content-center">
    <%= form_with model: @item, url: admin_items_path do |f| %>
          <div class="form-group">
            <lavel for="inputImage">商品画像</lavel>
            <%= f.file_field :image, placeholder: "Image", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label for="inputName">商品名</label>
            <%= f.text_field :name, autofocus: true, id:"inputName" %>
          </div>
          <div class="form-group">
            <label for="inputName">商品紹介</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputText" %>
          </div>
          <div class="form-group">
            <label for="inputName">カテゴリー</label>
            <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "--選択して下さい" %>
          </div>
          <div class="form-group">
            <label for="inputName">税抜価格</label>
            <%= f.text_field :price, autofocus: true, id:"inputName" %>円
          </div>
          <div class="form-group">
            <label for="inputName">在庫数</label>
            <%= f.text_field :inventory, autofocus: true, id:"inputName" %>
          </div>
          <div class="form-group">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
</div>