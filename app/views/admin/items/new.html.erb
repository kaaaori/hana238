<div class="row">
    <div class="errorblock">
      <% if @item.errors.any? %>
        <div class="alert">
          <h5>以下の内容を入力してください</h5>
            <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    </div>
  </div>
<div class="container">
  <h3 class="my-5 text-center">商品新規登録</h3>
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="mb-3 col-10 col-md-8 col-lg-6 mx-auto">
      <%= f.label :商品画像 %><br />
      <%= f.file_field :image, autofocus: true, placeholder: "Image", accept: "image/*", class: 'form-control' %>
    </div>
    <div class="mb-3 col-10 col-md-8 col-lg-6 mx-auto">
      <%= f.label :商品名 %><br />
      <%= f.text_field :name, autofocus: true, id:"inputName", class: 'form-control' %>
    </div>
    <div class="mb-3 col-10 col-md-8 col-lg-6 mx-auto">
      <%= f.label :商品説明 %><br />
      <%= f.text_area :introduction, autofocus: true, id:"inputText", class: 'form-control', rows: "5" %>
    </div>
    <div class="mb-3 col-10 col-md-8 col-lg-6 mx-auto">
      <%= f.label :カテゴリー %><br />
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '--選択してください' }, class: 'form-control' %>
    </div>
    <div class="mb-3 col-10 col-md-8 col-lg-6 mx-auto">
      <%= f.label :税込価格（円） %><br />
      <%= f.text_field :price, autofocus: true, id:"inputName", class: 'form-control' %>
    </div>
    <div class="mb-3 col-10 col-md-8 col-lg-6 mx-auto">
      <%= f.label :在庫数 %><br />
      <%= f.text_field :inventory, autofocus: true, id:"inputName", class: 'form-control' %>
    </div>
    <div class="my-2 text-center">
      <%= f.submit "登録", class: "btn btn-sm btn-dark col-4 col-lg-2" %>
    </div>
  <% end %>
</div>
