<div class="container">
  <h3 class="mt-5 text-center">商品詳細</h3>
  <div class="row mt-5 mb-3">
    <div class="d-block mx-auto img-fluid w-50">
      <%= image_tag @item.get_image(300,300) %>
    </div>
  </div>
        <%= form_with model: @item, url: admin_item_path(@item.id) do |f| %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <td>商品名</td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td>商品説明</td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td>カテゴリー</td>
                <td><%= @item.category.name %></td>
              </tr>
              <tr>
                <td>税込価格<br>
                (税抜価格)</td>
                <td><%= @item.price %></td>
              </tr>
              <tr>
                <td>在庫数</td>
                <td><%= @item.inventory %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
  </div>
</div>