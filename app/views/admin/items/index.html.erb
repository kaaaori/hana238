<div class="container">
  <h3 class="mt-5 mb-3 text-center">商品一覧</h3>
  
  <div class="row mb-3 d-flex justify-content-end">
    <%= link_to new_admin_item_path, class:"mt-3 col-1" do %>
      <i class="fas fa-plus-circle fa-lg" style="color: #0f0f0f;"></i>
    <% end %>
  </div>
  <div class="row mb-3 d-flex justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル名</th>
          <th>ステータス</th>
        </tr>
      </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.category.name %></td>
            <!--<td> %=販売中＆soldout+(在庫数) %-->
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
