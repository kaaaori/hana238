 <div class="container">
  <h3>さんの注文履歴</h3>
  <h5 class="text-center my-3">注文履歴一覧</h5>
  <div class="row">
    <div class="col-12 col-md-8 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <td>注文日</td>
            <td>注文商品</td>
            <td>支払金額</td>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr
            data-controller="href"
            data-action="click->href#toHref keydown->href#enterToHref"
            data-href="<%= admin_order_path(order.id) %>"
            tabindex="0"
            role="link"
            style="cursor: pointer;">
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <!--削除したitemに対しての文言があると良い-->
              <%= order_detail.item&.name&.truncate(10) || "商品は削除されました。" %> <br>
              <% end %>
            </td>
            <td><%= order.total %>円</td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>