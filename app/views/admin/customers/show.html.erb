<div class="container">
  <h3 class="my-5 text-center">
        <%= @customer.last_name %><%= @customer.first_name %> さんの会員詳細
  </h3>
  
  <div class="row d-flex justify-content-center mt-5">
      <div class="col-11">
        <p>会員ID　　　　  　<%= @customer.id %></p>
        <p>氏名　　　　　　  <%= @customer.last_name %><%= @customer.first_name %></p>
        <p>郵便番号　　　　  <%= @customer.postal_code %></p>
        <p>住所　　　　　　  <%= @customer.address %></p>
        <p>電話番号　　　　  <%= @customer.phone_number %></p>
        <p>メールアドレス　  <%= @customer.email %></p>
        <p>ステータス　　　
        <% if @customer.is_deleted %>
          退会済み
        <% else %>
          有効
        <% end %></p>
      </div>
    </div>
    <div class="mt-3 ml-5 row">
      <div class="col-2">
  　　　　　<%= link_to "編集する", edit_admin_customer_path, class: "btn btn-sm btn-success" %>
      </div>
      <div class="col-2">
        <%= link_to "注文履歴一覧を見る", admin_order_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
</div>
