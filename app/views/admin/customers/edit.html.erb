<div class="container">
  <div class="row">
    <div class="mx-auto col-10" >
      <h4 class="my-4">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
      </h4>
      <!--エラー分日本語へ変換する&レイアウト整える-->
      <div class="errorblock">
        <% if @customer.errors.any? %>
          <div class="alert">
            <h3><%= @customer.errors.count %> error prohibited this obj from being saved:</h3>
              <ul>
                <% @coustomer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
      </div>
      
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <div class="form-group row">
          <%=f.label :input_id, "会員ID", class:"col-3"%>
          <div class="col-3">
            <p><%= @customer.id %></p>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_name, "氏名", class:"col-3"%>
          <div class="col-3">
          <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
          </div>
          <div class="col-3">
          <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_postal_code, "郵便番号", class:"col-3"%>
          <div class="col-3">
          <%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_address, "住所", class:"col-3"%>
          <div class="col-8">
          <%= f.text_field :address, autofocus: true, id:"inputAddress", size: 50 %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_telephone_number, "電話番号", class:"col-3"%>
          <div class="col-3">
          <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumbere" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_email, "メールアドレス", class:"col-3"%>
          <div class="col-3">
          <%= f.text_field :email, autofocus: true, id:"inputEmail" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div> 
  </div>
</div>