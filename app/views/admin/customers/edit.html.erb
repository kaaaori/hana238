<div class="errorblock">
  <% if @customer.errors.any? %>
    <div class="alert">
      <h5>以下の内容を入力してください</h5>
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
</div>
<%= form_with model: @customer, url: admin_customer_path do |f| %>

<div class="container">
  <h3 class="my-5 text-center"><%= @customer.last_name %> <%= @customer.first_name %> さんの詳細編集</h3>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-6 mx-auto">
        会員ID　<%= @customer.id %>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-6 mx-auto">
        氏名
      </div>
    </div>
    <div class="row mb-3 d-flex justify-content-center">
      <div class="col-3">
        <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
      </div>
      <div class="col-3">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>
    <div class="mb-3 col-6 mx-auto">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :postal_code, class: 'form-control' %>
    </div>
    <div class="mb-3 col-6 mx-auto">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, class: 'form-control' , size: 50 %>
    </div>
     <div class="mb-3 col-6 mx-auto">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :phone_number, class: 'form-control'%>
    </div>
    <div class="mb-3 col-6 mx-auto">
      <%= f.label :メールアドレス %><br />
      <%= f.text_field :email, class: 'form-control'%>
    </div>
    <div class="d-grid gap-2 col-2 mx-auto my-4">
      <%= f.submit "変更を保存", class: "btn btn-sm btn-dark" %>
    </div>
</div>
<% end %>