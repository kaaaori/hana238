<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="container">
    <h3 class="mt-5 text-center">ログイン</h3>
    <h5 class="mt-5 text-center">メールアドレスとパスワードを入力して下さい</h5>
      <div class="my-4 col-10 col-md-5 col-lg-4 mx-auto">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder:"メールアドレス"%>
      </div>
      <div class="mb-4 col-10 col-md-5 col-lg-4 mx-auto">
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder:"パスワード"%>
      </div>
      <div class="mb-2 text-center">
        <%= f.submit "ログイン", class: "btn btn-sm btn-dark col-4 col-lg-2" %>
      </div>
      <!--パス再設定-->
      <!--<p class="mb-5 text-center">-->
      <!--  %= link_to "パスワードをお忘れですか？", new_password_path(resource_name) %>-->
      <!--</p>-->
    <h5 class="text-center mt-5">はじめての方はこちら</h5>
      <p class="text-center">ご登録がお済みではない方は、こちらからご登録をお願いいたします</p>
      <div class="row d-flex justify-content-center mt-2">
        <%= link_to "新規会員登録", new_customer_registration_path, class: "btn btn-sm btn-outline-secondary col-4 col-lg-2" %>
      </div>
  </div> 
<% end %>