<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="container">
    <h3 class="headline mt-5 text-center">ログイン</h3>
    <h5 class="mt-5 text-center">メールアドレスとパスワードを入力して下さい</h5>
      <div class="form-floating mb-3 col-8 mx-auto">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">　メールアドレス</label>
      </div>
      <div class="form-floating col-8 mx-auto">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">　パスワード</label>
      </div>
      
      <div class="row">
        <div class="col-8 mx-auto" >
          <h5><span class=".bg-light.bg-opacity-75">メールアドレスとパスワードを入力して下さい</span></h5>
          <div class="form-group row">
          <%=f.label :input_name, "メールアドレス", class:"col-4"%>
            <div class="col-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
            </div>
          </div>
          <div class="form-group row">
            <%=f.label :input_password, "パスワード", class:"col-4"%>
            <div class="col-8">
              <%= f.password_field :password, autocomplete: "new-password"%>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "　ログイン　", class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
          
      <div class="row">
        <div class="col-8 mx-auto">
        <h5 class="mt-5 text-center">はじめての方はこちら</h5>
        <p class="text-center">ご登録がお済みではない方は、こちらから登録お願いいたします。</p>
          <%= link_to "こちら", new_customer_registration_path %> から新規登録を行ってください。
        </div>
      </div>
  </div>
<%= render "public/shared/links" %> 
<% end %>