<div class="colspan">
  <h5 class="mt-5 text-center">登録情報</h5>
  <div class="row d-flex justify-content-center">
    <div class="col-5">
    <table class="table mt-3", border="1", rules="all">
      <tr>
        <td class="col-2">氏名</td>
        <td class="col-3"><%= @customer.last_name %>　<%= @customer.first_name %></td>
      </tr>
      <tr>
        <td bgcolor="#f5f5f5">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td bgcolor="#f5f5f5">電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
    </table>
    <div class="row d-flex justify-content-end mt-2">
      <%= link_to "編集する", customers_info_edit_path, class: "btn btn-sm btn btn-outline-secondary col-2" %>
    </div>  
    </div>
  </div>
   <h5 class="mt-5 text-center">配送先一覧</h5>
    <div class="row d-flex justify-content-center">
      <div class="col-5">
      <table class="table mt-3", border="1", rules="all">
        <tr>
          <td bgcolor="#f5f5f5">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td bgcolor="#f5f5f5">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
      </table>
        
      <div class="form-group row">
        <div class="col-2">
          <h5>配送先</h5>
        </div>
        <div class="col-2">
          <%= link_to "　一覧を見る　", customers_info_edit_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2">
          <h5>注文履歴</h5>
        </div>
        <div class="col-2">
          <%= link_to "　一覧を見る　", root_path, class: "btn btn-sm btn-primary" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-2">
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>