<div class="container">
  <h3 class="my-3 text-center">My page</h3>
  <div class="row text-center">
    <%= render 'sidebar' %>
  </div>
  <h5 class="mt-3 text-center">会員情報編集</h5>
  <div class="row">
    <div class="errorblock">
      <% if @customer.errors.any? %>
        <div class="alert">
          <h5>以下の内容を入力してください</h5>
            <ul>
              <% @customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    </div>
  </div>
    
  <%= form_with model: @customer, url: customers_info_path do |f| %>
  <div class="row my-3 d-flex justify-content-center">
    <div class="col-5 col-md-4 col-lg-2 me-1">
      <%= f.text_field :last_name, autofocus: true, id:"inputName", class: 'form-control' , placeholder:"姓" %>
    </div>
    <div class="col-5 col-md-4 col-lg-2 ms-1">
      <%= f.text_field :first_name, autofocus: true, id:"inputName", class: 'form-control' , placeholder:"名" %>
    </div>
  </div>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder:"name@example.com"%>
  </div>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, class: 'form-control', placeholder:"ハイフン不要"%>
  </div>
  <head>
    <script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>
  </head>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code , id: "customer_postal_code", class: 'form-control', placeholder:"ハイフン不要" %>
  </div>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :prefecture_code, '都道府県' %><br />
    <!--47都道府県をプルダウンメニューで表示-->
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' },
        id: 'customer_prefecture_code', class: 'form-control' %>
  </div>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :address_city, '市区町村' %><br />
    <%= f.text_field :address_city, autocomplete: 'address_city', id: "customer_address_city", class: 'form-control'%>
  </div>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :address_street, '番地' %><br />
    <%= f.text_field :address_street, autocomplete: 'address_street', id: "user_address_street", class: 'form-control'%>
  </div>
  <div class="mb-3 col-10 col-md-8 col-lg-4 mx-auto">
    <%= f.label :address_building, '建物' %><br/>
    <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control'%>
  </div>
  <div class="mb-2 text-center">
      <%= f.submit "編集内容を保存", class: "btn btn-sm btn-dark col-5 col-lg-2" %>
  </div>
  <div class="row text-center">
    <h7 class="mt-3 mb-2">退会はこちらからお手続きをお願いいたします</h7>
      <div class="mb-3 mx-auto">
        <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-sm btn-outline-secondary col-5 col-md-4 col-lg-2" %>
      </div>
  </div>
  <% end %>
</div>