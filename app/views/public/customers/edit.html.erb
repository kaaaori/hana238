<div class="container">
    <h4 class="mt-5 text-center">会員情報編集</h4>


</div>
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto" >
      <h5>会員情報編集</h5>
      <div class="errorblock">
        <% if @customer.errors.any? %>
          <div class="alert">
            <h3><%= @customer.errors.count %> error prohibited this obj from being saved:</h3>
              <ul>
                <% @customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
      </div>
    
      <%= form_with model: @customer, url: customers_information_path do |f| %>
        <div class="form-group row">
          <%=f.label :input_name, "氏名", class:"col-3"%>
          <div class="col-4">
          <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
          </div>
          <div class="col-4">
          <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_telephone_number, "電話番号", class:"col-3"%>
          <div class="col-4">
          <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumbere" %>
          </div>
        </div>
        <div class="form-group row">
          <%=f.label :input_email, "メールアドレス", class:"col-3"%>
          <div class="col-4">
          <%= f.text_field :email, autofocus: true, id:"inputEmail" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger"%>
        </div>
      <% end %>
    </div> 
  </div>
</div>